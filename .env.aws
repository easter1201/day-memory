# ========================================
# AWS 환경 설정 (.env.aws)
# ========================================
# 주의: 실제 배포 시 민감한 정보는 AWS Secrets Manager를 사용하세요

# ========================================
# 기본 설정
# ========================================
SPRING_PROFILES_ACTIVE=prod

# ========================================
# 데이터베이스 설정
# ========================================
DB_NAME=daymemory_prod
DB_USERNAME=postgres
DB_PASSWORD=<YOUR_SECURE_PASSWORD>  # 변경 필수

# ========================================
# 서버 포트 설정
# ========================================
SERVER_PORT=8080

# ========================================
# CORS 및 프론트엔드 설정
# ========================================
# AWS EC2 또는 로드밸런서의 퍼블릭 IP/도메인으로 변경
# 예: http://your-aws-domain.com, http://your-alb-url.elb.amazonaws.com
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:80
FRONTEND_API_BASE_URL=http://localhost:8080/api  # 프론트엔드에서 사용할 API URL

# AWS 배포 시 실제 예시:
# CORS_ALLOWED_ORIGINS=http://your-domain.com,http://your-domain.com:3000
# FRONTEND_API_BASE_URL=http://your-domain.com/api

# ========================================
# JWT 설정
# ========================================
# 프로덕션 환경에서는 안전한 시크릿 키 생성 필수
JWT_SECRET=<YOUR_LONG_SECURE_SECRET_KEY>  # 변경 필수 - 최소 256비트
JWT_ACCESS_EXPIRATION=3600000      # 1시간 (밀리초)
JWT_REFRESH_EXPIRATION=604800000   # 7일 (밀리초)

# ========================================
# 메일 설정
# ========================================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=<YOUR_EMAIL@gmail.com>
MAIL_PASSWORD=<YOUR_APP_PASSWORD>  # Gmail 앱 비밀번호

# ========================================
# AI API 설정
# ========================================
AI_API_KEY=<YOUR_GEMINI_API_KEY>
AI_PROVIDER=gemini
AI_MODEL=gemini-2.5-flash

# ========================================
# OAuth 설정
# ========================================
GOOGLE_CLIENT_ID=<YOUR_GOOGLE_CLIENT_ID>
GOOGLE_CLIENT_SECRET=<YOUR_GOOGLE_CLIENT_SECRET>
KAKAO_CLIENT_ID=<YOUR_KAKAO_CLIENT_ID>
KAKAO_CLIENT_SECRET=<YOUR_KAKAO_CLIENT_SECRET>

# ========================================
# 네이버 API 설정
# ========================================
NAVER_CLIENT_ID=<YOUR_NAVER_CLIENT_ID>
NAVER_CLIENT_SECRET=<YOUR_NAVER_CLIENT_SECRET>

# ========================================
# pgAdmin 설정 (개발/테스트용 - 프로덕션에서는 제거)
# ========================================
# PGADMIN_EMAIL=admin@daymemory.com
# PGADMIN_PASSWORD=<YOUR_PGADMIN_PASSWORD>
